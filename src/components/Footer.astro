            <div class="sponsors">
                <sub>Proudly sponsored by</sub>
                <div class="sponsorLogos">
                    <Image
                        src={imdaLogo}
                        alt="IMDA"
                        style="width: 100%; height: auto; max-width: 80px; min-width: 20px;"
                    />
                    <Image
                        src={joinableLogo}
                        alt="Joinable"
                        style="width: 100%; height: auto; max-width: 80px; min-width: 20px;"
                    />
                    <Image

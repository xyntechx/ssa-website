---
import { Image } from "astro:assets";
import logo from "../../assets/logos/ssa.svg";
import instagram from "../../assets/socials/instagram.svg";
import linkedin from "../../assets/socials/linkedin.svg";
import facebook from "../../assets/socials/facebook.svg";
// import imdaLogo from "../../assets/logos/imda.svg";
// import joinableLogo from "../../assets/logos/joinable.svg";
// import monkshillLogo from "../../assets/logos/monkshill.svg";
// import zolveLogo from "../../assets/logos/zolve.svg";
---

<footer>
    <div class="footerContent">
        <div class="left">
            <Image src={logo} alt="SSA Logo" width={100} height={100} />
            <p>
                The Singapore Student Association (SSA) is a student
                organization that provides a close-knit family for students in
                UC Berkeley who are associated with or interested in the
                Singaporean culture.
            </p>
            <div class="socials">
                <a
                    href="https://www.instagram.com/ucberkeleyssa/"
                    target="_blank"
                >
                    <Image
                        src={instagram}
                        alt="SSA Instagram"
                        width={20}
                        height={20}
                    />
                </a>
                <a
                    href="https://www.linkedin.com/company/uc-berkeley-singapore-student-association/about/"
                    target="_blank"
                >
                    <Image
                        src={linkedin}
                        alt="SSA LinkedIn"
                        width={20}
                        height={20}
                    />
                </a>
                <a href="https://www.facebook.com/ssaberkeley/" target="_blank">
                    <Image
                        src={facebook}
                        alt="SSA Facebook"
                        width={20}
                        height={20}
                    />
                </a>
            </div>
        </div>

        <div class="right">
            <nav class="linksContainer">
                <div class="links">
                    <p>Menu</p>
                    <a href="/about">About</a>
                    <a href="/leadership">Leadership</a>
                    <a href="/events">Events</a>
                </div>
                <div class="links">
                    <p>Students</p>
                    <a href="/join">Membership</a>
                    <a href="/join/new-admits">New Admits</a>
                    <a href="/join/exchange">Exchange Students</a>
                </div>
                <div class="links">
                    <p>More</p>
                    <a href="/sponsor">Sponsor Us</a>
                    <a href="/hire">Hire Us</a>
                    <a href="mailto:contactus@ssa.berkeley.edu">Contact</a>
                </div>
            </nav>
        </div>
    </div>

    <div class="footerContentEnd">
        <div class="leftEnd">
            <sub>Copyright &copy; 2025 SSA Berkeley. All rights reserved.</sub>
            <sub
                >Website maintained by <a href="https://jesslynruswan.framer.website/"
                    >Jesslyn Ashley Ruswan</a
                > :]</sub
            >
        </div>

        <div class="rightEnd">
            <div class="sponsors">
                <sub style="width: 70%"
                    >We're accepting sponsorships for Fall 2025 and Spring 2026!
                    Check out our <a href="/sponsor">Sponsor Us</a> page for more
                    info!</sub
                >
            </div>
        </div>

